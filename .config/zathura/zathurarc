# General
set selection-clipboard "clipboard"
set window-title-home-tilde "true"
set window-title-basename "true"
set statusbar-basename "true"
set adjust-open "best-fit"  # Open document in fit-width mode by default
set pages-per-row 1         # One page per row by default
set render-loading "false"
set scroll-step 50

# Font
set font "RobotoMono Nerd Font Mono"

# Recolor
# set recolor true
# set recolor-lightcolor "#24273A"
# set recolor-darkcolor "#CAD3F5"
# set recolor-reverse-video "true"
# set recolor-keephue "true"

# Stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01

# Padding
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# XXX zoom options
set zoom-min 10
set guioptions ""


# Keys
map K zoom in
map J zoom out
map I recolor
map D toggle_page_mode
map r reload
map R rotate
map F follow
map [ scroll half-down
map ] scroll half-up
map C display_link
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map s adjust_window width
map S adjust_window best-fit
# set smooth-scroll true

